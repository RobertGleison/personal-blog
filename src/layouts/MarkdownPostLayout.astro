---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;

// Get all posts to find previous and next
const allPosts = await Astro.glob('../pages/posts/*.md');
const sortedPosts = allPosts
  .filter(post => post.frontmatter?.pubDate)
  .sort((a, b) => {
    return new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime();
  });

// Find current post index
const currentUrl = Astro.url.pathname;
const currentIndex = sortedPosts.findIndex(post => post.url === currentUrl);

// Get previous and next posts
const previousPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null;
const nextPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="post-container">
    <a href="/" class="back-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
    </a>
    <header class="post-header">
      <h1 class="post-title">{frontmatter.title}</h1>
      <div class="post-meta">
        <time datetime={frontmatter.pubDate}>
          {new Date(frontmatter.pubDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {frontmatter.author && (
          <>
            <span class="separator">•</span>
            <span class="author">{frontmatter.author}</span>
          </>
        )}
      </div>
      {frontmatter.image && (
        <div class="post-image">
          <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
        </div>
      )}
      {frontmatter.tags && (
        <div class="post-tags">
          {frontmatter.tags.map((tag: string) => (
            <a href={`/tags/${tag}/`} class="tag-badge">{tag}</a>
          ))}
        </div>
      )}
    </header>
    <div class="post-content">
      <slot />
    </div>

    {(previousPost || nextPost) && (
      <nav class="post-navigation">
        {previousPost && (
          <a href={previousPost.url} class="nav-link nav-previous">
            <span class="nav-label">← Previous</span>
            <span class="nav-title">{previousPost.frontmatter.title}</span>
          </a>
        )}
        {nextPost && (
          <a href={nextPost.url} class="nav-link nav-next">
            <span class="nav-label">Next →</span>
            <span class="nav-title">{nextPost.frontmatter.title}</span>
          </a>
        )}
      </nav>
    )}
  </article>
</BaseLayout>

<style>
  .post-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.95rem;
    margin-bottom: 2rem;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: all 0.2s;
  }

  .back-button:hover {
    color: var(--accent-color);
    background: var(--bg-tertiary);
    transform: translateX(-4px);
  }

  .back-button svg {
    width: 20px;
    height: 20px;
  }

  .post-header {
    margin-bottom: 3rem;
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: var(--text-primary);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.95rem;
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  .separator {
    color: var(--text-muted);
  }

  .author {
    font-style: italic;
  }

  .post-image {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
    border-radius: 6px;
    margin-bottom: 2rem;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post-content {
    font-family: 'JetBrains Mono', monospace;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .post-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .nav-link:hover {
    border-color: var(--accent-color);
    transform: translateY(-2px);
  }

  .nav-previous {
    text-align: left;
  }

  .nav-next {
    text-align: right;
    grid-column: 2;
  }

  .nav-link:only-child.nav-previous {
    grid-column: 1;
  }

  .nav-link:only-child.nav-next {
    grid-column: 2;
  }

  .nav-label {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .nav-title {
    font-size: 1rem;
    color: var(--text-primary);
    font-weight: 600;
    line-height: 1.4;
  }

  .nav-link:hover .nav-title {
    color: var(--accent-color);
  }

  @media (max-width: 768px) {
    .post-container {
      padding: 2rem 1rem;
    }

    .post-title {
      font-size: 2rem;
    }

    .post-navigation {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .nav-next {
      grid-column: 1;
    }

    .nav-link:only-child {
      grid-column: 1;
    }
  }
</style>
