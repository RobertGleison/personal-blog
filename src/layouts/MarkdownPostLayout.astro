---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="post-container">
    <a href="/" class="back-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
    </a>
    <header class="post-header">
      <h1 class="post-title">{frontmatter.title}</h1>
      <div class="post-meta">
        <time datetime={frontmatter.pubDate}>
          {new Date(frontmatter.pubDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {frontmatter.author && (
          <>
            <span class="separator">â€¢</span>
            <span class="author">{frontmatter.author}</span>
          </>
        )}
      </div>
      {frontmatter.image && (
        <div class="post-image">
          <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
        </div>
      )}
      {frontmatter.tags && (
        <div class="post-tags">
          {frontmatter.tags.map((tag: string) => (
            <a href={`/tags/${tag}/`} class="tag-badge">{tag}</a>
          ))}
        </div>
      )}
    </header>
    <div class="post-content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .post-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.95rem;
    margin-bottom: 2rem;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.2s;
  }

  .back-button:hover {
    color: var(--accent-color);
    background: var(--bg-tertiary);
    transform: translateX(-4px);
  }

  .back-button svg {
    width: 20px;
    height: 20px;
  }

  .post-header {
    margin-bottom: 3rem;
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: var(--text-primary);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.95rem;
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  .separator {
    color: var(--text-muted);
  }

  .author {
    font-style: italic;
  }

  .post-image {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
    border-radius: 12px;
    margin-bottom: 2rem;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post-content {
    font-family: 'JetBrains Mono', monospace;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .post-container {
      padding: 2rem 1rem;
    }

    .post-title {
      font-size: 2rem;
    }
  }
</style>
