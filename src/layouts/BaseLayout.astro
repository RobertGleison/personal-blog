---
import { ClientRouter } from 'astro:transitions';
import Navigation from '../components/Navigation.astro';
import { type Locale, defaultLocale, locales } from '../i18n/config';
import { getLocalizedPath } from '../i18n/utils';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  locale?: Locale;
}

const { title = 'My Blog', description = 'A simple blog built with Astro', locale = defaultLocale } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang={locale}>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="alternate" type="application/rss+xml" title="RSS Feed" href={`/${locale}/rss.xml`} />
        {locales.map((loc) => (
          <link rel="alternate" hreflang={loc} href={getLocalizedPath(currentPath, loc)} />
        ))}
        <link rel="alternate" hreflang="x-default" href={`/en${currentPath.replace(/^\/(en|pt)/, '') || '/'}`} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,opsz,wght@0,18..144,300..900;1,18..144,300..900&display=swap" rel="stylesheet">
        <ClientRouter fallback="none" />
        <style is:global>
          ::view-transition-old(root),
          ::view-transition-new(root) {
            animation-duration: 70ms;
          }
        </style>
        <title>{title}</title>
        <script is:inline>
          // Initialize theme before page renders to prevent flash
          function applyTheme() {
            const theme = localStorage?.getItem('theme') ||
                          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');

            if (theme === 'dark') {
              document.documentElement.setAttribute('data-theme', 'dark');
            } else {
              document.documentElement.removeAttribute('data-theme');
            }
          }

          // Apply on initial load
          applyTheme();

          // Re-apply after View Transitions swap (before render)
          document.addEventListener('astro:after-swap', applyTheme);
        </script>
    </head>
    <body>
        <Navigation locale={locale} />
          <main>
              <slot />
          </main>
    </body>
</html>
