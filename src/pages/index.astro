---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import { translate } from '../i18n/utils';
import logo from '../assets/logo.png';

const locale = 'en';

const allPosts = await getCollection('posts', ({ id }) => id.startsWith('en/'));
const sortedPosts = allPosts.sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const recentPosts = sortedPosts.slice(0, 3);
---

<BaseLayout title="Home | Robert Gleison" description={translate(locale, 'home.welcome')} locale={locale}>

    <div class="hero-container">
        <div class="hero-content">
            <div class="brand-section">
              <img src={logo.src} alt="Robert Gleison Logo" class="brand-logo" />
              <h1 class="hero-title">Robert Gleison</h1>
            </div>
            <p class="hero-text">
              {translate(locale, 'home.welcome')}<br><br>
              {translate(locale, 'home.intro')} <br><br>
              {translate(locale, 'home.about')}
            </p>
        </div>
    </div>

    <section class="recent-posts">
        <h2>{translate(locale, 'home.recentPosts')}</h2>
        <div class="posts-grid">
            {recentPosts.map((post) => (
                <ArticleCard
                    url={`/posts/${post.slug.replace('en/', '')}/`}
                    title={post.data.title}
                    description={post.data.description}
                    pubDate={post.data.pubDate}
                    tags={post.data.tags}
                    image={post.data.image}
                    locale={locale}
                />
            ))}
        </div>
      <a href="/posts/" class="view-all-link">{translate(locale, 'home.viewAllPosts')} &rarr;</a>
    </section>

</BaseLayout>

<style>
  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
    min-height: 60vh;
    display: flex;
    align-items: center;
    position: relative;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    position: relative;
    z-index: 1;
  }

  .brand-section {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .brand-logo {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 300;
    color: var(--text-primary);
    line-height: 1.2;
    text-align: left;
    margin: 0;
  }

   .hero-text {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 2.5rem;
    margin-top: 4rem;
    line-height: 1.6;
    text-align: left;
  }

  @media (max-width: 768px) {
    .hero-container {
      padding: 3rem 3rem;
      min-height: 50vh;
    }

    .brand-section {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .brand-logo {
      width: 60px;
      height: 60px;
    }

    .hero-title {
      font-size: 2.5rem;
    }
  }

  .recent-posts {
    max-width: 1200px;
    align-items: center;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .recent-posts h2 {
    font-size: 2.5rem;
    font-weight: 300;
    color: var(--text-primary);
    margin-bottom: 2rem;
    text-align: center;
  }

  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .view-all-link {
    display: block;
    text-align: center;
    font-size: 1.3rem;
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 500;
    padding: 1rem;
    transition: all 0.2s;
  }

  .view-all-link:hover {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .recent-posts {
      padding: 3rem 3rem;
    }

    .recent-posts h2 {
      font-size: 2rem;
      font-weight: 400;
    }

    .posts-grid {
      gap: 1rem;
    }
  }
</style>
