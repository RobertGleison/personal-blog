---
interface CategoryCount {
  name: string;
  count: number;
}

interface Props {
  categories: CategoryCount[];
  totalPosts: number;
  currentCategory?: string;
}

const { categories, totalPosts, currentCategory } = Astro.props;
---

<aside class="categories-sidebar">
  <div class="categories-header">
    <h2>CATEGORIAS</h2>
    <span class="total-posts">{totalPosts} posts</span>
  </div>

  <nav class="categories-list">
    <a href="/posts/" class={`category-item ${!currentCategory ? 'active' : ''}`}>
      <span class="category-name">Todos</span>
      <span class="category-count">{totalPosts}</span>
    </a>

    {categories.map(category => (
      <a
        href={`/tags/${category.name.toLowerCase()}/`}
        class={`category-item ${currentCategory && currentCategory.toLowerCase() === category.name.toLowerCase() ? 'active' : ''}`}
      >
        <span class="category-name">{category.name}</span>
        <span class="category-count">{category.count}</span>
      </a>
    ))}
  </nav>
</aside>

<style>
  .categories-sidebar {
    background: var(--bg-secondary);
    border-radius: 6px;
    padding: 1.5rem;
    border: 1px solid var(--border-color);
    height: fit-content;
    position: sticky;
    top: 2rem;
  }

  .categories-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  .categories-header h2 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-muted);
    margin-bottom: 0.25rem;
    letter-spacing: 0.05em;
  }

  .total-posts {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .categories-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .category-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    border-radius: 6px;
    text-decoration: none;
    color: var(--text-secondary);
    transition: background-color 0.2s, color 0.2s;
  }

  .category-item:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .category-item.active {
    background: var(--bg-quaternary);
    color: var(--text-primary);
    font-weight: 600;
  }

  .category-name {
    font-size: 0.95rem;
  }

  .category-count {
    font-size: 0.875rem;
    color: var(--text-muted);
    background: var(--bg-tertiary);
    padding: 0.125rem 0.5rem;
    border-radius: 6px;
    min-width: 1.5rem;
    text-align: center;
  }

  .category-item.active .category-count {
    background: var(--bg-primary);
  }

  @media (max-width: 968px) {
    .categories-sidebar {
      position: static;
      margin-bottom: 2rem;
    }
  }
</style>
