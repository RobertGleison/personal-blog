---
import { localeNames, localeFlags, type Locale } from '../i18n/config';
import { getAlternateLocale, getLocalizedPath } from '../i18n/utils';

interface Props {
  locale: Locale;
  currentPath: string;
}

const { locale, currentPath } = Astro.props;
const alternateLocale = getAlternateLocale(locale);
const alternatePath = getLocalizedPath(currentPath, alternateLocale);
---

<a
  href={alternatePath}
  class="language-switcher"
  aria-label={`Switch to ${localeNames[alternateLocale]}`}
  title={`Switch to ${localeNames[alternateLocale]}`}
>
  <span class="flag">{localeFlags[alternateLocale]}</span>
  <span class="language-name">{localeNames[alternateLocale]}</span>
</a>

<style>
  .language-switcher {
    display: flex;
    align-items: center;
    margin-top: 10px;
    gap: 0.4rem;
    /* padding: 0.4rem 0.6rem; */
    border-radius: 6px;
    text-decoration: none;
    color: var(--text-muted);
    /* background: var(--bg-secondary); */
    transition: all 0.2s ease;
    font-size: 0.85rem;
  }


  .flag {
    font-size: 1rem;
  }

  .language-name {
    display: none;
  }

  @media (min-width: 768px) {
    .language-name {
      display: inline;
    }
  }
</style>
