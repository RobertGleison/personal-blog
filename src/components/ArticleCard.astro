---
import { type Locale, defaultLocale } from '../i18n/config';
import { formatDate } from '../i18n/utils';

interface Props {
    url: string;
    title: string;
    description?: string;
    pubDate: Date;
    author?: string;
    image?: {
      url: string;
      alt: string;
    };
    tags?: string[];
    locale?: Locale;
}

const { url, title, description, pubDate, author, image, tags, locale = defaultLocale } = Astro.props;
---

<article class="article-card">
    <a href={url} class="article-link">
        {image && (
          <div class="article-image">
            <img src={image.url} alt={image.alt} loading="lazy" />
          </div>
        )}
        <div class="article-content">
            <h2 class="article-title">{title}</h2>
            <p class="article-description">{description}</p>
            <div class="article-meta">
                {tags && tags.length > 0 && (
                    <div class="article-tags">
                        {tags.map((tag) => (
                            <span class="tag-badge">{tag}</span>
                        ))}
                    </div>
                )}
                <time datetime={pubDate.toISOString()}>{formatDate(pubDate, locale)}</time>
            </div>
        </div>
    </a>
</article>

<style>
  /* Article Card */
  .article-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    overflow: hidden;
    transition: transform 0.1s, background-color 0.1s ease, border-color 0.1s ease;
  }

  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: rgba(0, 0, 0, 0.1);
    border-color: var(--accent-color);
  }

  .article-link {
    text-decoration: none;
    color: inherit;
    display: grid;
    grid-template-columns: 280px 1fr;
    grid-template-rows: 200px;
    gap: 0;
  }

  .article-image {
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: var(--bg-quaternary);
  }

  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .article-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    overflow: hidden;
  }

  .article-title {
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .article-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-top: auto;
    transition: color 0.3s ease;
  }

  .article-meta .author {
    font-style: italic;
  }

  .article-description {
    color: var(--text-tertiary);
    margin-bottom: 1rem;
    line-height: 1.6;
    transition: color 0.3s ease;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-badge {
    background: var(--bg-quaternary);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    color: var(--text-muted);
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s;
  }

  .tag-badge:hover {
    background: var(--accent-color);
    color: var(--accent-contrast);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .article-link {
      grid-template-columns: 1fr;
    }

    .article-image {
      height: 180px;
    }
  }
</style>
